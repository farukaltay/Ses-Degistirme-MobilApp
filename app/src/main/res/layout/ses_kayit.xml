<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--app:layout_behavior="@string/appbar_scrolling_view_behavior"

    tools:showIn="@layout/app_bar_main" -->

    <Button
        android:id="@+id/btnKayitBaslat"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="376dp"
        android:background="@drawable/buttonshape"
        android:onClick="btnKayitBaslat"
        android:text="Kayıt Başlat" />

    <Button
        android:id="@+id/btnOynat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnKayitBaslat"

        android:layout_alignParentTop="true"
        android:layout_marginTop="505dp"
        android:background="@drawable/buttonshape"
        android:onClick="btnOynat"
        android:text="Oynat" />

    <Button
        android:id="@+id/btnKayitDurdur"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnKayitBaslat"
        android:layout_alignParentTop="true"
        android:layout_marginTop="440dp"
        android:layout_marginEnd="-2dp"
        android:background="@drawable/buttonshape"
        android:onClick="btnKayitDurdur"
        android:text="KAYIT Durdur" />

<!--Button
    android:id="@+id/btnDurdur"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="178dp"
    android:onClick="btnDurdur"
    android:text="Durdur" /-->

    <EditText
        android:id="@+id/etDosyaadi"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <RadioGroup
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="134dp"
        android:layout_marginBottom="342dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rbwav"
            android:layout_width="83dp"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/btnOynat"
            android:background="@drawable/buttonshape"
            android:text=".wav" />

        <RadioButton
            android:id="@+id/rbmp3"
            android:layout_width="82dp"

            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/buttonshape"
            android:checked="true"
            android:text=".mp3" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etDosyaadi"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-38dp"
        android:text="Dosya Adını Giriniz"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="117dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="321dp"
        android:text="Sesin Hız Ayarı"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnOynat"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="-277dp"
        android:layout_marginEnd="63dp"

        android:ems="10"
        android:hint="0.5 ile 2.0 arasında giriniz."
        android:inputType="numberDecimal"
        android:text="1.0" />


</RelativeLayout>

